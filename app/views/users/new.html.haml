%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @user, html: {class: "form-horizontal"} do |f|
        %header
          %h1 Register
        %fieldset
          .form_group
            .row
              .col-sm-4
                = f.email_field :email, label: "Email Address"
            .row
              .col-sm-4
                = f.password_field :password
            .row
              .col-sm-4
                = f.text_field :full_name, label: "Full Name"  
        = hidden_field_tag :invitation_token, @invitation_token
        %fieldset.actions.control-group.col-sm-offset-1
          .controls
            <script src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="#{ENV['STRIPE_PUBLISHABLE_KEY']}" data-amount="999" data-name="Myflix Sign Up Charge" data-description="$9.99 to sign up for the best video service around!" data-currency="cad"></script>

